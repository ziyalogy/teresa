	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_teresa.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_teresa.sys.ini</language>
	</languages>
	<t4>
		<basetheme>base</basetheme>
		<bootstrap>bs5</bootstrap>

		<site>
			<fields name="typelist-site">
				<fieldset name="group_styles_font">

	      	<field
            name="heading_line_height"
            class="inline"
            type="hidden"
            default="1.4"
            hint="1.4"
            label="T4_HEADING_LINE_HEIGHT_LABEL"
            description="T4_HEADING_LINE_HEIGHT_DESC"
          />

	      	<field
            name="heading_letter_spacing"
            class="heading-setting col-l"
            type="text"
            default="0px"
            hint="0px"
            label="T4_HEADING_LETTER_SPACING_LABEL"
            description="T4_HEADING_LETTER_SPACING_DESC"
          />
		      <field
            name="h1_font_size"
            class="h1-font-size heading-setting col-r"
            type="text"
            default="40px"
            hint="40px"
            label="T4_H1_FONT_SIZE_LABEL"
            description="T4_H1_FONT_SIZE_DESC"
          />
		      <field
            name="h2_font_size"
            class="h2-font-size heading-setting col-l"
            type="text"
            default="32px"
            hint="32px"
            label="T4_H2_FONT_SIZE_LABEL"
            description="T4_H2_FONT_SIZE_DESC"
          />
		      <field
            name="h3_font_size"
            class="h3-font-size heading-setting col-r"
            type="text"
            default="28px"
            hint="28px"
            label="T4_H3_FONT_SIZE_LABEL"
            description="T4_H3_FONT_SIZE_DESC"
          />
		      <field
            name="h4_font_size"
            class="h4-font-size heading-setting col-l"
            type="text"
            default="24px"
            hint="24px"
            label="T4_H4_FONT_SIZE_LABEL"
            description="T4_H1_FONT_SIZE_DESC"
          />
		      <field
            name="h5_font_size"
            class="h5-font-size heading-setting col-r"
            type="text"
            default="20px"
            hint="20px"
            label="T4_H5_FONT_SIZE_LABEL"
            description="T4_H5_FONT_SIZE_DESC"
          />
		      <field
            name="h6_font_size"
            class="h6-font-size heading-setting col-l"
            type="text"
            default="16px"
            hint="16px"
            label="T4_H6_FONT_SIZE_LABEL"
            description="T4_H6_FONT_SIZE_DESC"
          />
	      
	    </fieldset>
			</fields>
		</site>
	</t4>

	<updateservers>
    <server
      type="extension"
      priority="1"
      name="T4 Blank"
    >#</server>
	</updateservers>
</extension>

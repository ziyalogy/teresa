<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 7</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="desc" type="textarea" label="FEATURES_DESCRIPTIONS_LABEL" description="FEATURES_DESCRIPTIONS_DESC" />

			<field name="columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
			</field>
		</fieldset>

		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC" multiple="1">
			<field name="data" type="jalist" >
				<item name="title" type="text" default="" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" rows="5" cols="40" required="1" />
				<item name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" />
			</field>
		</fieldset>
		
  </fields>
</form>
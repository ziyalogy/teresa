<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Hero Style 1</title>
	<sampledata></sampledata>
	<fields name="hero-intro">
		<fieldset name="basic" label="HERO_BASIC_LABEL" description="HERO_BASIC_DESC">
			<field name="intro-image" type="media" label="HERO_INTRO_IMAGE_LABEL" description="HERO_INTRO_IMAGE_DESC" required="1"/>

			<field name="hero-desc" type="textarea" default="" label="HERO_DESCRIPTION_LABEL" description="HERO_DESCRIPTION_DESC" filter="raw"/>

			<field name="btn-link" type="text" default="" label="HERO_LINK_LABEL" description="HERO_LINK_DESC"/>
			<field name="btn-title" type="text" default="" label="HERO_LINK_TITLE_LABEL" description="HERO_LINK_TITLE_DESC"/>

			<field name="bg-content" type="list" default="left" label="HERO_BACKGROUND_LIST_ITEMS_LABEL" description="HERO_BACKGROUND_LIST_ITEMS_DESC">
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="info">Info</option>
			</field>
		</fieldset>
  </fields>
</form>
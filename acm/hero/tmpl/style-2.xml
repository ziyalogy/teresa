<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Hero Style 1</title>
	<sampledata></sampledata>
	<fields name="hero-intro">
		<fieldset name="basic" label="HERO_BASIC_LABEL" description="HERO_BASIC_DESC">
			<field name="bg-content" type="list" default="left" label="HERO_BACKGROUND_CONTENT_LABEL" description="HERO_BACKGROUND_CONTENT_DESC">
				<option value="white">White</option>
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="info">Info</option>
			</field>

			<field name="hero-desc" type="textarea" default="" label="HERO_DESCRIPTION_LABEL" description="HERO_DESCRIPTION_DESC" filter="raw"/>

			<field name="btn-link" type="text" default="" label="HERO_LINK_LABEL" description="HERO_LINK_DESC"/>
			<field name="btn-title" type="text" default="" label="HERO_LINK_TITLE_LABEL" description="HERO_LINK_TITLE_DESC"/>

			<field name="bg-list-items" type="list" default="left" label="HERO_BACKGROUND_LIST_ITEMS_LABEL" description="HERO_BACKGROUND_LIST_ITEMS_DESC">
				<option value="white">White</option>
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="info">Info</option>
			</field>
		</fieldset>

		<fieldset name="section-hero" label="HERO_SECTION_LABEL" description="HERO_SECTION_DESC" multiple="1">
			<field name="img-icon" type="media" default="" label="HERO_IMAGE_LABEL" description="HERO_IMAGE_DESC"  />
			<field name="sub-title" type="text" default="" size="40" label="HERO_SUB_TITLE_LABEL" description="HERO_SUB_TITLE_DESC"/>
			<field name="title" type="text" default="" size="40" label="HERO_TITLE_LABEL" description="HERO_TITLE_DESC" required="1" />
			<field name="description" type="textarea" default="" label="HERO_DESCRIPTION_LABEL" description="HERO_DESCRIPTION_DESC" rows="5" cols="40" />
		</fieldset>
  </fields>
</form>